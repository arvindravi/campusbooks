<div class="container">
  <div class="row">
        <br>
        <br><br>
        <div class="page-header">
          <h1>
            Books
            <small>
              For Sale
            </small>
          </h1>
        </div>
        <% if !@books.blank? %>
          <% @books.each do |book| %>
            <div class="well">
              <h4>
                <%= link_to book.title, book %>
              </h4>
              <hr />
              <p>
                Author : <%= book.author %>
              </p>
              <br />
              <p>
                Price : &#8377; <%= book.price %>
              </p>
              <%= link_to '<i class="icon-shopping-cart icon-white"></i> Buy this book'.html_safe, buy_book_path(book), :class => 'button small green pull-right' %>
            </div>
          <% end %>
        <% else %>
          <div class="well alert alert-error">
            <p>
              <i class="icon-exclamation-sign" style="color:maroon;font-size:25px;"></i>&nbsp;&nbsp;&nbsp;There are no books for sale right now.
            </p>
          </div>
        <% end %>
        <div class="pagination-centered">
          <%= will_paginate @books, :renderer => BootstrapPagination::Rails %>
        </div>
  </div>
</div>