<div class="container">
  <div class="row span12">
        <div class="page-header">
          <h1>
            My Books
            <small>
              Books I've posted
            </small>
          </h1>
        </div>
        <% if !@books.blank? %>
        <div class="">
          <% @books.each do |book| %>
            <div class="well span3">
              <h4>
                <%= link_to truncate(book.title,:length => 21), book, :rel => 'tooltip', :'data-original-title' => book.title, :'data-trigger' => 'hover',  :id => 'book_title' %>
              </h4>
              <hr />
              <div>
                <p>
                  Author : <%= book.author %>
                </p>
                <br />
                <p>
                  Price : &#8377; <%= book.price %>
                </p>
              </div>
              <hr>
              <p class="pull-left">
              	Status : 
              </p>
              <p class="pull-right">
              	<% if book.sold %>
              	  <span class="badge badge-important">SOLD</span>
              	<% else %>
              	  <span class="badge badge-success">FOR SALE</span>
              	<% end %>
              </p>
            </div>
          <% end %>
        <% else %>
          <div >
            <p class="alert alert-error">
              <i class="icon-exclamation-sign" style="color:maroon;font-size:20px;"></i>&nbsp;&nbsp;&nbsp;You haven't posted any Books yet.
            </p>
          </div>
        <% end %>
        </div>
        <div class="pagination-centered">
          <%= will_paginate @books, :renderer => BootstrapPagination::Rails %>
        </div>
  </div>
</div>