<div class="container">
	<% if !current_user %>
	  <div class="row">
	  	<div class="main-content">
	  		<div>
	  			<h1 class="title">
	  				Campus Books
	  			</h1>
	  			<br />
	  			<p class="tagline">
	  				&nbsp;&nbsp;Online marketplace to buy/sell used books within SRM University.
	  			</p>
	  		</div>
	  	</div>
	  	<div class="login">
	  		<form id="registration_form" action="sessions/set" method="post" class="form-inline">           
	  		  <input type="text" id="reg_no" autocomplete="off" class="input-large" placeholder="Enter your registration no." ><br /><br />
	  		  <%= link_to '<i class="icon-facebook-sign" style="font-size:23px"></i>&nbsp;&nbsp;&nbsp;Sign in with Facebook'.html_safe, "/auth/facebook", id: "sign_in", :class => 'btn btn-large btn-success fb' %>
	  		</form>
	  	</div>
	  </div>
	<% else %>
	  <div class="row">
	  	<br>
	  	<br><br>
	  	<div class="hero-unit">
	  		<h1>
	  			Welcome <%= current_user.first_name %> !
	  		</h1>
	  	</div>
	  </div>
	<% end %>
</div>
