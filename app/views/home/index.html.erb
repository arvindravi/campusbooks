<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<% if !current_user %>
  <form action="sessions/set" method="post" name="reg" class="form-inline" id="regs">
    <input type="text" name="reg_no" id="reg_no" autocomplete="off" >      
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", :class => 'btn btn-primary' %>    
  </form>  
<% else %>
  <div class="pull-right">
    <% if @unread_messages.blank? %>
      <p>
        You have no unread messages!
      </p>
    <% else %>      
      You have <%= link_to @unread_messages.count, queries_path %> unread message(s)!
    <% end %>
  </div>
  <div>  	
  	<%= link_to 'Sell', sell_books_path %>
  </div>
  <div>
  	<%= link_to 'Buy', books_path %>
  </div>  
<% end %>  
<% content_for :scripts do %>
<script>
  $(function(){       
    var button = $('#sign_in');
    var reg_no_field = $('#reg_no');
    var reg_no = reg_no_field.val(); 
    button.addClass("disabled");    
    button.attr('href','#');    
    var re = /10(2|3|4)(0|1)(0|9)(4|1)0\d\d/
    reg_no_field.keydown(function(e){    
      if(reg_no_field.val().length == 9 && reg_no_field.val().match(re)){        
        button.removeClass("disabled");
        button.attr('href','/auth/facebook');              
      }
    });    
  });
</script>
<% end %>