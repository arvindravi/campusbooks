<!DOCTYPE html>
<html>
<head>
  <title>Campusbooks</title>  
  <%= stylesheet_link_tag    "application", :media => "all" %>  
  <%= csrf_meta_tags %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-37200107-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body>
	<% if current_user %>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">	  	
	    <a class="brand" href="/">Campus Books</a>
		    <!-- <ul class="nav">
		      <li class="active"><a href="#">Home</a></li>
		      <li><a href="#">Link</a></li>
		      <li><a href="#">Link</a></li>
		      
		    </ul> -->
	    	<ul class="nav pull-right">	    		  		
	    		<li class="dropdown">	    				    		
	    			<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target="#" style="padding-bottom: 0px;">
	    				<img src="<%= current_user.picture_url %>" height="30" width="30" class="img-circle" alt="<%= current_user.name %>">
	    				<%= current_user.name %>
	    				<b class="caret"></b>
	    			</a>
	    			<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">		        
	    				<li>
	    					<%= link_to 'My Books', books_path %>
	    				</li>
	    				<li>
	    					<%= link_to 'Messages', queries_path %>
	    				</li>
	    				<li class="divider"></li>
	    				<li>
	    					<%= link_to 'Sign Out', signout_path %>
	    				</li>
	    			</ul>
	    		</li>	    		
	    	</ul>	       
	  </div>
	</div>		
	<% end %>
<%= yield %>

</body>
<%= javascript_include_tag "application" %>
<%= yield :scripts %>
</html>
